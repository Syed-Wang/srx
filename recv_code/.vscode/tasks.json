{
  "tasks": [
    {
      "type": "cppbuild", // 任务类型 cppbuild: C/C++: g++ build active file
      "label": "C/C++: gcc 生成活动文件", // 任务名称
      "command": "/usr/bin/gcc", // 命令
      "args": [ // 编译选项
        "-fdiagnostics-color=always",
        "-pthread",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}" // 工作目录
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "调试器生成的任务。"
    }
  ],
  "version": "2.0.0"
}
